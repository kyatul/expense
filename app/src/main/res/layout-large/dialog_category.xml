<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9f000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#dfdfdf"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:padding="20dp"
            android:background="#fafafa"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:text="Select an image for category"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#dfdfdf"
        >

        <ImageView
            android:id="@+id/ctEntertainment"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="#fafafa"
            android:padding="15dp"
            android:layout_marginRight="2sp"
            android:layout_marginBottom="2sp"
            android:src="@drawable/dark_random1"
            />
        <ImageView
            android:id="@+id/ctFood"
            android:layout_marginRight="2sp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:background="#fafafa"
            android:src="@drawable/dark_random2"
            />
        <ImageView
            android:id="@+id/ctHealth"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="#fafafa"
            android:padding="15dp"
            android:src="@drawable/dark_random3"
            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ctOthers"
            android:layout_width="110dp"
            android:layout_marginRight="2sp"
            android:layout_marginBottom="2sp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:background="#fafafa"
            android:src="@drawable/dark_random4"
            />
        <ImageView
            android:id="@+id/ctShopping"
            android:layout_marginRight="2sp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:background="#fafafa"
            android:src="@drawable/dark_random5"
            />
        <ImageView
            android:id="@+id/ctTravel"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="15dp"
            android:background="#fafafa"
            android:src="@drawable/dark_random6"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ctRandom1"
                android:layout_marginRight="2sp"
                android:layout_marginBottom="2sp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="15dp"
                android:background="#fafafa"
                android:src="@drawable/dark_random7"
                />
            <ImageView
                android:id="@+id/ctRandom2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="#fafafa"
                android:padding="15dp"
                android:layout_marginRight="1sp"
                android:src="@drawable/dark_random8"
                />
            <ImageView
                android:id="@+id/ctRandom3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="#fafafa"
                android:padding="15dp"
                android:src="@drawable/dark_random9"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvDialogCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:text="Cancel"
            android:background="@color/dialog"
            android:padding="12sp"/>
    </LinearLayout>

</RelativeLayout>

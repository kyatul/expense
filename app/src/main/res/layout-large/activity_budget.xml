<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/color1"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlHeadBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30sp"
        android:paddingBottom="30sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:background="@color/color2"
        >

        <TextView
            android:id="@+id/tvBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Budget"
            android:textColor="@color/color0"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_below="@id/rlHeadBudget"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@color/color0"
        ></View>

    <ListView
        android:id="@+id/lvBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:divider="@color/color0"
        android:dividerHeight="4px"></ListView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/lvAboveAmtEdit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="50dp">


            <EditText
                android:id="@+id/etAmountAmtEdit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="amount"
                android:inputType="numberDecimal"
                android:textColor="@color/color0"
                android:textColorHint="@color/color0"
                android:textSize="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color0"></LinearLayout>

        </LinearLayout>



        <Spinner
            android:id="@+id/spAmtEditCat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="8sp"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"></Spinner>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingTop="20sp">

            <RelativeLayout
                android:id="@+id/llTimeAmtEdit1"
                android:padding="3sp"
                android:background="@color/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etDayAmtEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:focusableInTouchMode="false"
                    android:hint="October 30, 1991"
                    android:textColor="@color/color0"
                    android:textColorHint="@color/color0"
                    android:layout_marginLeft="5sp"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_toRightOf="@id/etDayAmtEdit1"
                    android:id="@+id/ivCalendarAmtEdit1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_toRightOf="@id/llTimeAmtEdit1"
                android:padding="3sp"
                android:background="@color/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTimeAmtEdit1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/time" />


                <EditText
                    android:id="@+id/etTimeAmtEdit1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivTimeAmtEdit1"
                    android:background="#00000000"
                    android:focusableInTouchMode="false"
                    android:hint="9:27 PM"
                    android:textColor="@color/color0"
                    android:textColorHint="@color/color0"
                    android:textSize="18sp" />
            </RelativeLayout>


            <EditText
                android:id="@+id/etDescriptionAmtEdit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llTimeAmtEdit1"
                android:background="@color/color1"
                android:gravity="center"
                android:hint="Enter Description  "
                android:inputType="textCapWords"
                android:layout_marginTop="15sp"
                android:padding="5sp"
                android:textColor="@color/color0"
                android:textColorHint="@color/color0"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/etDescriptionAmtEdit1"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="2dp"
                android:background="@color/color0" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llOptionsAmtEdit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:id="@+id/llSaveAmtEdit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivSaveAmtEdit1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="10"
                    android:src="@drawable/yes" />

                <TextView
                    android:id="@+id/tvSaveAmtEdit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_horizontal"
                    android:text="Save"
                    android:textColor="@color/color0"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDeleteAmtEdit1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivDeleteAmtEdit1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="10"
                    android:src="@drawable/no" />

                <TextView
                    android:id="@+id/tvDeleteAmtEdit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_horizontal"
                    android:text="Delete"
                    android:textColor="@color/color0"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

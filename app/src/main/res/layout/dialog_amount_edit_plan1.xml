<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bf000000">

    <LinearLayout
        android:layout_marginLeft="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#dfdfdf"
        >
        <EditText
            android:id="@+id/etAmtEditTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="false"
            android:layout_margin="10sp"
            android:text="\u20b9 500"
            android:layout_marginTop="15sp"
            android:textColor="@android:color/black"
            android:padding="5sp"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fafafa">


            <Spinner
                android:id="@+id/spAmtEditCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="8sp"
                android:layout_alignParentTop="true"></Spinner>

            <RelativeLayout
                android:layout_below="@id/spAmtEditCat"
                android:padding="3sp"
                android:layout_marginTop="8sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etAmtEditDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:focusableInTouchMode="false"
                    android:hint="October 30, 1991"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="5sp"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_toRightOf="@id/etAmtEditDay"
                    android:id="@+id/ivAmtEditCalendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dark_random8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="8sp"
                android:id="@+id/rlAmtEditTime"
                android:layout_below="@id/spAmtEditCat"
                android:padding="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/ivAmtEditTime"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dark_random8" />

                <EditText
                    android:id="@+id/etAmtEditTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivAmtEditTime"
                    android:background="#00000000"
                    android:focusableInTouchMode="false"
                    android:hint="9:27 PM"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

            </RelativeLayout>

            <EditText
                android:layout_below="@id/rlAmtEditTime"
                android:id="@+id/etAmtEditDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="8sp"
                android:hint="Enter Description"
                android:inputType="textCapWords"
                android:layout_marginTop="8sp"
                android:textColor="@android:color/black"
                android:padding="5sp"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:background="#fafafa"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/tvAmtEditDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:background="@color/dialog"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvAmtEditDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1sp"
                android:layout_weight="50"
                android:background="@color/dialog"
                android:gravity="center_horizontal"
                android:padding="10sp"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

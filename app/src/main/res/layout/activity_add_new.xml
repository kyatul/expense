<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/lvAbove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="50dp">


            <EditText
                android:id="@+id/etAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:hint="amount"
                android:inputType="numberDecimal"
                android:textColor="@color/color0"
                android:textColorHint="@color/color0"
                android:textSize="45dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color0"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:gravity="center"
                    android:hint="Start typing category"
                    android:inputType="textCapWords"
                    android:textColor="@color/color0"
                    android:textColorHint="@color/color0"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color0"></LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/ivNewCategoryAccept"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20sp"
                android:src="@drawable/nav_yes"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="10sp"
            android:paddingTop="10dp"
            android:text="       OR \n PICK ONE"
            android:textColor="#fafafa"
            android:textSize="20dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/tvFinalCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginTop="10sp"
                android:layout_weight="90"
                android:text="Entertainment"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivCategoryCancel"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="10"
                android:src="@drawable/nav_no"
                android:visibility="gone" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rlTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:paddingTop="20sp"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/llTime"
                android:padding="3sp"
                android:background="@color/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:focusableInTouchMode="false"
                    android:hint="October 30, 1991"
                    android:textColor="@color/color0"
                    android:textColorHint="@color/color0"
                    android:layout_marginLeft="5sp"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_toRightOf="@id/etDay"
                    android:id="@+id/ivCalendar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_toRightOf="@id/llTime"
                android:padding="3sp"
                android:background="@color/color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivTime"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/time" />


                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/ivTime"
                    android:background="#00000000"
                    android:focusableInTouchMode="false"
                    android:hint="9:27 PM"
                    android:textColor="@color/color0"
                    android:textColorHint="@color/color0"
                    android:textSize="18sp" />

            </RelativeLayout>


            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llTime"
                android:background="@color/color1"
                android:gravity="center"
                android:hint="Enter Description  "
                android:inputType="textCapWords"
                android:layout_marginTop="15sp"
                android:padding="5sp"
                android:textColor="@color/color0"
                android:textColorHint="@color/color0"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/etDescription"
                android:layout_marginBottom="20sp"
                android:layout_marginTop="2dp"
                android:background="@color/color0" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lvBelow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color3"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/color0"
            android:dividerHeight="4px"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/llOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivSave"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="10"
                    android:src="@drawable/yes" />

                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_horizontal"
                    android:text="Save"
                    android:textColor="@color/color0"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="10"
                    android:src="@drawable/no" />

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:gravity="center_horizontal"
                    android:text="Cancel"
                    android:textColor="@color/color0"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
